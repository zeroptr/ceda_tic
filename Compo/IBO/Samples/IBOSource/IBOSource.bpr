VERSION = BCB.04.04
# ---------------------------------------------------------------------------
PROJECT = IBOSource.exe
OBJFILES = ..\..\IBF_Base.obj FRM_Source.obj IBOSource.obj
RESFILES = 
RESDEPEN = $(RESFILES) ..\..\IBF_Base.dfm FRM_Source.dfm
LIBFILES =
LIBRARIES = dclocx40.lib ibsmp40.lib nmfast40.lib tee40.lib \
  teedb40.lib teeui40.lib vcldbx40.lib vcldb40.lib qrpt40.lib bcbsmp40.lib
SPARELIBS = Vcl40.lib vclx40.lib vcljpg40.lib bcbsmp40.lib qrpt40.lib vcldb40.lib \
  vcldbx40.lib teeui40.lib teedb40.lib tee40.lib nmfast40.lib ibo_c4.lib \
  ibsmp40.lib dclocx40.lib 
PACKAGES = Vcl40.bpi Vclx40.bpi vcljpg40.bpi ibo_c4.bpi
DEFFILE =
# ---------------------------------------------------------------------------
PATHCPP = .;
PATHASM = .;
PATHPAS = .;..\..
PATHRC = .;
DEBUGLIBPATH = $(BCB)\lib\debug
RELEASELIBPATH = $(BCB)\lib\release
USERDEFINES =
SYSDEFINES = _RTLDLL;NO_STRICT;USEPACKAGES
# ---------------------------------------------------------------------------
CFLAG1 = -I..\..;$(BCB)\include;$(BCB)\include\vcl -Od -Hc -H=$(BCB)\lib\vcl40.csm -w \
  -Ve -r- -a8 -k -y -v -vi- -c -b- -w-par -w-inl -Vx -tW -tWM \
  -D$(SYSDEFINES);$(USERDEFINES)
PFLAGS = -U..\..;$(BCB)\Projects\Lib;$(BCB)\lib\debug;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) \
  -I..\..;$(BCB)\include;$(BCB)\include\vcl -$YD -$W -$O- -v -JPHNE -M
RFLAGS = -i..\..;$(BCB)\include;$(BCB)\include\vcl
AFLAGS = /i$(BCB)\include /i$(BCB)\include\vcl /mx /w2 /zd
LFLAGS = -L..\..;$(BCB)\Projects\Lib;$(BCB)\lib\debug;$(BCB)\lib\obj;$(BCB)\lib;$(RELEASELIBPATH) \
  -aa -Tpe -x -Gn -v
# ---------------------------------------------------------------------------
ALLOBJ = c0w32.obj Memmgr.Lib $(PACKAGES) sysinit.obj $(OBJFILES)
ALLRES = $(RESFILES)
ALLLIB = $(LIBFILES) $(LIBRARIES) import32.lib cp32mti.lib
